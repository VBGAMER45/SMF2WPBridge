<?xml version="1.0"?>
<!DOCTYPE package-info SYSTEM "http://www.simplemachines.org/xml/package-info">
<package-info xmlns="http://www.simplemachines.org/xml/package-info" xmlns:smf="http://www.simplemachines.org/">
<name>SMF2WPBridge</name>
<id>DSR!:SMF2WPBridge</id>
<version>1.0</version>
<type>modification</type>
	<install>
		<readme parsebbc="true">info.txt</readme>
		<redirect url="?action=admin;area=modsettings;sa=smf2wp">redirect.txt</redirect>
		<require-file name="Subs-SMF2WP-Admin.php" destination="$sourcedir" />
		<require-file name="Subs-SMF2WP-User.php" destination="$sourcedir" />
		<require-file name="SMF2WPBridge.english.php" destination="$languagedir" />
		<require-file name="SMF2WPBridge.english-utf8.php" destination="$languagedir" />
		<require-file name="SMF2WPBridge.spanish_es.php" destination="$languagedir" />
		<require-file name="SMF2WPBridge.spanish_es-utf8.php" destination="$languagedir" />
		<database type="file">SMF2WP-hooks.php</database>
	</install>
	<uninstall>
		<remove-file name="$sourcedir/Subs-SMF2WP-Admin.php"/>
		<remove-file name="$sourcedir/Subs-SMF2WP-User.php"/>
		<remove-file name="$languagedir/SMF2WPBridge.english.php" />
		<remove-file name="$languagedir/SMF2WPBridge.english-utf8.php" />
		<remove-file name="$languagedir/SMF2WPBridge.spanish_es.php" />
		<remove-file name="$languagedir/SMF2WPBridge.spanish_es-utf8.php" />
		<database type="file">SMF2WP-hooks.php</database>
	</uninstall>
</package-info>
